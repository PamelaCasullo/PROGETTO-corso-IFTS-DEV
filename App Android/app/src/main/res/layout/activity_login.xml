<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="250dp"

    android:paddingRight="16dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/BenvenutoInRed"
        android:layout_centerHorizontal = "true"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:text="Benvenuto in RED! Inserisci i dati forniti dall'ente per continuare!"
        android:textSize = "35dp"
        />
    <EditText
        android:id="@+id/email_its"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:focusable = "true"
        android:textAlignment="center"
        android:layout_below = "@+id/BenvenutoInRed"
        android:ems="10"
        android:textColorHint="@color/white"
        android:background="@color/cardview_dark_background"
        android:hint="email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/password_its"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAlignment="center"
        android:ems="10"
        android:layout_alignRight="@+id/BenvenutoInRed"
        android:layout_alignEnd="@+id/BenvenutoInRed"
        android:textColorHint="@color/white"
        android:background="@color/cardview_dark_background"
        android:hint="Password"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/loginButtonText"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity="right"

        android:onClick = "login"
        android:text="Login" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/RadioLogin">

        <RadioButton
            android:id="@+id/radio_studente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:text="@string/Studente"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/radio_docente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/white"
            android:text="@string/Docente" />
    </RadioGroup>

</LinearLayout>
