<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <!--barra con i titoli di data/materia/voto, niente id perchÃ¨ non hanno bisogno di essere modificati-->
    <LinearLayout
        android:id="@+id/barraTitoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="DATA"
            android:textAlignment="center"
            android:textColor="#80FF0000"
            android:textSize="23dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MATERIA"
            android:textAlignment="center"
            android:textColor="#80FF0000"
            android:textSize="23dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="VOTO"
            android:textAlignment="center"
            android:textColor="#80FF0000"
            android:textSize="23dp" />

    </LinearLayout>

    <!--lista dei voti ottenuti tramite database-->
    <ListView
        android:id="@+id/listaVoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barraTitoli"
        android:layout_above="@id/footer"
        android:verticalScrollbarPosition="right"/>


    <!--footer con sfondo rosso e nome progetto-->
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/red"
        android:text="Project.RED"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>