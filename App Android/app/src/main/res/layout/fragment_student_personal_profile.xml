<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/backg">

    <TextView
        android:id="@+id/textViewProfiloPersonale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="611dp"
        android:gravity="center_horizontal"
        android:text="Profilo Personale"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textViewProfiloPersonale"
        android:layout_marginTop="-1600px"
        android:background="@drawable/batman"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewProfiloPersonale"
        android:layout_marginTop="-1150px"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Nome:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewDataFirstName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewProfiloPersonale"
        android:layout_marginTop="-1150px"
        android:layout_toEndOf="@+id/textViewFirstName"
        android:hint=""
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewFirstName"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Cognome:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewDataLastName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewFirstName"
        android:layout_toEndOf="@+id/textViewLastName"
        android:hint=""
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <TextView
        android:id="@+id/textViewInstitutionalEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewLastName"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Email istituzionale:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewDataInstitutionalEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewLastName"
        android:layout_toEndOf="@+id/textViewInstitutionalEmail"
        android:hint=""
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <TextView
        android:id="@+id/textViewPersonalEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewInstitutionalEmail"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Email personale:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextPersonalEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewInstitutionalEmail"
        android:layout_toEndOf="@+id/textViewPersonalEmail"
        android:hint=""
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewPersonalEmail"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Numero di telefono:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewPersonalEmail"
        android:layout_toEndOf="@+id/textViewPhoneNumber"
        android:hint=""
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textViewDateOfBirth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewPhoneNumber"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Data di nascita:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewDataDateOfBirth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewPhoneNumber"
        android:layout_toEndOf="@+id/textViewDateOfBirth"
        android:hint=""
        android:inputType="date"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewDateOfBirth"
        android:background="@color/redb"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Password:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextDataPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewDateOfBirth"
        android:layout_toEndOf="@+id/textViewPassword"
        android:hint=""
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="text" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:ems="15"
        android:padding="@dimen/textMenuSize"
        android:text="update"
        android:backgroundTint="@color/red" />


</RelativeLayout>