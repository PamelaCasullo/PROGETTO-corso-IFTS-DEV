    <LinearLayout
        android:id="@+id/barraTitoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgred"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Elenco studenti"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!--PROFILO 1-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/barraTitoli"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageProfile"
        android:layout_below="@+id/barraTitoli"
        android:text="Nome:"
        android:textColor="@color/red"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/none"
        android:text="Cognome:"
        android:textColor="@color/red"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageProfile"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/cognome"
        android:text="E-Mail:"
        android:textColor="@color/red"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageProfile"/>

    <TextView
        android:id="@+id/numero"
